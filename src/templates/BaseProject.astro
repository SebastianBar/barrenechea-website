---
import type { ImageMetadata } from '@astrojs/image';

import ProjectPost from '@/partials/ProjectPost.astro';
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';

export interface Props {
  title: string;
  description: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  pubDate?: Date;
}

const {
  title: baseTitle,
  description,
  imgSrc,
  imgAlt,
  pubDate,
} = Astro.props as Props;
const title = `${baseTitle} - ${AppConfig.siteName}`;
---

<Base head={{ title, description }}>
  <ProjectPost
    title={baseTitle}
    description={description}
    imgSrc={imgSrc}
    imgAlt={imgAlt}
    pubDate={pubDate}
  >
    <slot />
  </ProjectPost>
</Base>
